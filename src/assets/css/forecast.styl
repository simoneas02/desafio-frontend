.forecast
    max-width 350px
    width 100%
    margin-bottom 10px
    background title-color
    color dark-text-color
    display flex
    flex-direction column
    align-items center
    justify-content center

.forecast__header
    display flex
    max-width 350px
    width 100%
    padding-left 30px
    margin 5px 0 auto 0

.forecast__header__city
    font-size 12px
    margin 0
    padding 5px 0

.forecast__header__btn
    border none
    width 30px
    margin 3px 3px 3px auto
    background url("/assets/icon/close.svg") center no-repeat

.main
    display flex
    flex-direction column
    flex 1
    max-width 330px
    width 100%
    padding 10px 5px
    border-bottom 1px solid primary-color
    padding-left 20px

.temperature
    margin 10px 0
    font-size 28px
    font-weight 700
    display flex
    align-items baseline

.temperature__min
    max-width 80px
    width 100%

.temperature__condition
    max-width 200px
    width 100%

.info
    display flex
    max-width 300px
    width 100%
    padding 5px 0

.info__condition
    max-width 100px
    width 100%
    display flex

.info__condition__min-max
    color dark-text-color
    font-size 12px
    font-weight 700
    max-width 40px
    width 100%

.info__condition__name
    color #a9a4a4
    font-size 11px

.info__condition__number
    color dark-text-color
    font-weight 700
    font-size 12px
    padding-left 5px

.footer
    display flex
    justify-content space-between
    max-width 300px
    width 100%
    padding-top 5px

.weather
    padding 5px
    display flex
    flex-direction column
    align-items center
    justify-content center

.weather__day
    font-size 12px
    color dark-text-color
    font-weight 700
    max-width 50px
    width 100%

.weather__condition
    display flex
    align-items center
    margin 5px 0

.weather__condition__min-max
    color primary-color
    font-size 10px
    font-weight 700
    padding-right 3px
    max-width 50px
    width 100%