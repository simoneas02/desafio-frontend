primary-color = #ff7f00
secondary-color = #ffb900
title-color = #fff2e4
dark-text-color = #505050
light-text-color = #8c6211
color-one = #636260

*
    box-sizing border-box

body, html
    height 100%
    background linear-gradient(to bottom, primary-color, secondary-color)

body
    font-family 'Roboto', sans-serif

/* Container */
.container
    max-width 700px
    width 100%
    display flex
    flex-direction column
    align-items center
    justify-content center
    margin 40px auto 0 auto
    height 100%
    color title-color

/* header */
.header
    max-width 700px
    width 100%
    display flex
    flex-direction column
    align-items center
    justify-content center

.header__title
    font-size 2.3em
    margin 0 20px 30px 20px

/* Search */
.search
    max-width 700px
    width 100%
    display flex
    align-items center
    justify-content center

.search__input
    max-width 300px
    width 100%
    height 40px
    color light-text-color
    font-size 16px
    padding-left 10px
    font-family 'Roboto', sans-serif
    border none
    background title-color

.search__button
    background url("/assets/icon/search.svg") center title-color no-repeat
    width 50px
    height 40px
    border none