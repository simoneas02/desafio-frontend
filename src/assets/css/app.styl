primary-color = #ff7f00
secondary-color = #ffb900
title-color = #fff2e4
dark-text-color = #505050
light-text-color = #8c6211
color-one = #636260

*
    box-sizing border-box

body, html
    height 100%
    background linear-gradient(to bottom, primary-color, secondary-color)

body
    font-family 'Roboto', sans-serif

/* Container */
.container
    max-width 700px
    width 100%
    display flex
    flex-direction column
    align-items center
    justify-content center
    margin 40px auto 0 auto
    height 100%
    color title-color

/* header */
.header
    max-width 700px
    width 100%
    display flex
    flex-direction column
    align-items center
    justify-content center

.header__title
    font-size 2.3em
    margin 0 20px 30px 20px

/* Search */
.search
    max-width 700px
    width 100%
    display flex
    align-items center
    justify-content center

.search__input
    max-width 300px
    width 100%
    height 40px
    color light-text-color
    font-size 16px
    padding-left 10px
    font-family 'Roboto', sans-serif
    border none
    background title-color

.search__button
    background url("/assets/icon/search.svg") center title-color no-repeat
    width 50px
    height 40px
    border none

.forecast
    max-width 350px
    width 100%
    height 200px
    margin-bottom 10px
    background title-color
    color dark-text-color
    display flex
    flex-direction column
    align-items center
    justify-content center

.forecast__header
    display flex
    max-width 350px
    width 100%
    padding-left 30px
    height 30px
    margin 5px 0 auto 0

.forecast__header__city
    font-size 12px

.forecast__header__btn
    border none
    width 30px
    height 30px
    margin 3px 3px 3px auto
    background url("/assets/icon/close.svg") center no-repeat

.main
    display flex
    flex-direction column
    flex 1
    max-width 330px
    width 100%
    padding 10px 5px
    border-bottom 1px solid primary-color
    padding-left 20px

.main__temperature
    margin 0
    height 70px
    font-size 28px
    display flex
    align-items center

.info
    display flex
    max-width 300px
    width 100%
    height 30px

.info__condition
    max-width 100px
    width 100%
    display flex

.info__condition__min-max
    color dark-text-color
    font-size 12px
    font-weight 700
    max-width 40px
    width 100%

.info__condition__name
    color #a9a4a4
    font-size 11px

.info__condition__number
    color dark-text-color
    font-weight 700
    font-size 12px
    padding-left 5px

.footer
    display flex
    justify-content space-between
    max-width 300px
    width 100%
    padding-top 5px

.weather
    padding 5px
    display flex
    flex-direction column
    align-items center
    justify-content center

.weather__day
    font-size 12px
    color dark-text-color
    font-weight 700
    max-width 50px
    width 100%

.weather__condition
    height 13px
    display flex
    align-items center
    margin 5px 0

.weather__condition__min-max
    color primary-color
    font-size 10px
    font-weight 700
    padding-right 3px
    max-width 50px
    width 100%