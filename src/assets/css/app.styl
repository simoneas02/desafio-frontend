primary-color = #ff7f00
secondary-color = #ffb900
title-color = #fff
dark-text-color = #505050
light-text-color = #8c6211
color-one = #636260

*
    box-sizing border-box

body, html
    height 100%
    background linear-gradient(to bottom, primary-color, secondary-color)

body
    font-family 'Roboto', sans-serif

/* Container */
.container
    max-width 700px
    width 100%
    display flex
    flex-direction column
    align-items center
    justify-content center
    margin 40px auto 0 auto
    height 100%
    color title-color

/* header */
.header
    max-width 700px
    width 100%
    display flex
    flex-direction column
    align-items center
    justify-content center

.header__title
    font-size 3em
    margin 0 20px 40px 20px

/* Search */
.search
    max-width 700px
    width 100%
    display flex
    align-items center
    justify-content center

.search__input
    max-width 300px
    width 100%
    height 40px
    border 1px solid light-text-color
    color light-text-color
    font-size 16px
    padding-left 10px
    font-family 'Roboto', sans-serif
    border-right none

.search__button
    background url("/assets/icon/search.svg") center title-color no-repeat
    width 50px
    height 40px
    border 1px solid light-text-color
    border-left none

/* Section */
.section
    max-width 400px
    width 100%
    margin-top 40px
    border-top 1px solid #ffb900
    display flex
    flex-direction column
    padding-left 50px

.section__title
    margin 5px 0
    max-width 320px
    width 100%

.section__content
    max-width 320px
    width 100%
    columns 150px 2
    column-gap 0

.section__content__title
    max-width 320px
    width 100%
    display flex

.x {
    max-width 160px
    width 100%
}

.section__content__min-max
    max-width 80px
    width 100%
    padding 10px 5px 10px 0
    color #8c6211
    font-size 10px

.section__content__details
    color #302b20
    font-weight 700
    font-size 12px
    padding 10px 0
    height 40px

.section__content__details__weather
    padding 10px 5px 10px 0

.section__content__details__where
    padding 10px 0 10px 5px